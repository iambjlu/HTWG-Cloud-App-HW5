project_id = "htwg-cloudapp-hw"
region     = "us-central1"
location   = "us-central1"

# 你的 Artifact Registry Image（請替換成實際值）
backend_image  = "us-central1-docker.pkg.dev/your-project/your-repo/backend:latest"
frontend_image = "us-central1-docker.pkg.dev/your-project/your-repo/frontend:latest"

# Cloud SQL 設定（維持 Shared Core）
db_instance_name   = "app-db"
db_tier            = "db-f1-micro"
db_disk_size_gb    = 10
authorized_networks = ["0.0.0.0/0"]

# 後端環境變數（範例）
backend_env = {
  "DB_HOST"     = "127.0.0.1"
  "DB_PORT"     = "3306"
  "DB_USER"     = "root"
  # 不設定 DB 密碼，保持現有 root 密碼；應由 Secret 或執行時注入
  "DB_NAME"     = "appdb"
  "CLOUD_SQL_CONNECTION_NAME" = "" # 可於程式邏輯使用；也可改為從環境不讀
}

# 前端環境變數（範例：會被 env-writer 覆蓋 VITE_API_BASE_URL）
frontend_env = {
  "VITE_SOME_FLAG" = "1"
}
